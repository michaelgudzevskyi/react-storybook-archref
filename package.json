{
  "name": "react-storybook-archref",
  "version": "1.0.4",
  "author": "Michael Gudzevskyi",
  "private": false,
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/michaelgudzevskyi/react-storybook-archref",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelgudzevskyi/react-storybook-archref.git"
  },
  "bugs": {
    "url": "https://github.com/michaelgudzevskyi/react-storybook-archref/issues",
    "email": "hello@michaelgudzevskyi.com"
  },
  "dependencies": {
    "styled-components": "^5.2.1"
  },
  "scripts": {
    "build": "tsc --build \"./tsconfig.json\"",
    "build:storybook": "build-storybook -s public",
    "clean": "if exist lib rd /s /q lib",
    "compile-icons": "npx @svgr/cli -d src/assets/icons src/assets/icons --typescript",
    "copy-fonts": "copyfiles -u 1 src/config/fonts/* lib/",
    "postbuild": "npm run copy-fonts",
    "prebuild": "npm run clean && npm run compile-icons",
    "prepublish": "npm run build",
    "start:storybook": "start-storybook -p 6006 -s public",
    "test": "jest --coverage --watchAll false",
    "lint": "./node_modules/.bin/eslint --fix \"./src/**/*.{ts,tsx,js,jsx}\""
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/node-logger": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.1.21",
    "@svgr/cli": "^5.4.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "@testing-library/user-event": "^13.0.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.8",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^5.1.3",
    "ts-jest": "^26.5.4",
    "jest-canvas-mock": "^2.3.1",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "10.1.1",
    "prettier": "1.19.1",
    "copyfiles": "^2.4.1",
    "concurrently": "^6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^17.0.1",
    "styled-components": "^5.2.1",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "lint-staged": {
    "./src/*": [
      "npm run lint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.{tsx,jsx,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "styles.ts",
      "global.ts",
      "theme.ts",
      "reportWebVitals.ts",
      "\\.d\\.ts$",
      "/src/assets/",
      "/node_modules/",
      ".stories.tsx",
      "/src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 15,
        "functions": 15,
        "lines": 15,
        "statements": 15
      }
    }
  }
}
